#!/bin/bash

# Author: Sam Protsenko (x0178546)

cscope_db_dir=.cscope

echo "Listing files..."

find $PWD -name "*.[chxsS]" > cscope.files

echo "Creating cscope DB..."
/usr/bin/cscope -b -q -k

echo "Moving in right place..."
rm -f cscope.files
rm -rf $cscope_db_dir
mkdir $cscope_db_dir
mv cscope.* $cscope_db_dir

echo "Done"

exit 0

